{
  // Use pnpm (default) but disable the frozen-lockfile flag so the build
  // works even when pnpm-lock.yaml is missing or out of date.
  "installCommand": "pnpm install --no-frozen-lockfile",
  // the rest of your build pipeline stays unchanged
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist",
  "ignoreCommand": "echo"
}
